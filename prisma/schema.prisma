generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum SearchTaskStatus {
  PENDING
  RUNNING
  DONE
  DONE_NO_RESULTS
  FAILED
}

enum LeadStatus {
  NEW
  CONTACTED
  REPLIED
  QUALIFIED
  DISQUALIFIED
}

enum LeadSource {
  AMPLELEADS
  APOLLO
  SALES_NAVIGATOR
  SEARCH_LEADS
  SCRAPER_CITY
  MANUAL
}

enum ScraperProvider {
  SCRAPER_CITY
  SEARCH_LEADS
  BOOMERANG
  DADDY_LEADS
  APIFY
  SCRUPP
}

enum ScraperRunStatus {
  RUNNING
  SUCCESS
  FAILED
}

enum UserRole {
  ADMIN
  SALE_MANAGER
}

model User {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  email        String   @unique
  passwordHash String
  role         UserRole @default(SALE_MANAGER)
  isActive     Boolean  @default(true)
  lastLoginAt  DateTime?

  @@index([role])
  @@index([isActive])
}

model ScraperRun {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  searchTaskId String
  searchTask   SearchTask @relation(fields: [searchTaskId], references: [id])

  provider      ScraperProvider
  status        ScraperRunStatus
  errorMessage  String?
  leadsCount    Int?
  externalRunId String?
  meta          Json?

  @@index([searchTaskId])
  @@index([provider, status])
}

model SearchTask {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  prompt String

  industry    String?
  titles      String[]
  locations   String[]
  companySize String?
  limit       Int

  status SearchTaskStatus @default(PENDING)
  source LeadSource

  chatId            String?
  telegramUserId    String?
  telegramMessageId String?

  apolloUrl     String?
  fileName      String?
  runId         String?
  lastCheckedAt DateTime?

  totalLeads   Int?
  errorMessage String?

  leadDbFilters Json?

  leads Lead[]

  scraperProvider ScraperProvider?
  scraperRuns     ScraperRun[]

  campaignId String?
  campaign   Campaign? @relation(fields: [campaignId], references: [id])

  @@index([status])
  @@index([runId])
  @@index([chatId])
}

model Lead {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  searchTaskId String
  searchTask   SearchTask @relation(fields: [searchTaskId], references: [id])

  source     LeadSource
  externalId String?

  fullName      String?
  firstName     String?
  lastName      String?
  title         String?
  company       String?
  companyDomain String?
  companyUrl    String?
  linkedinUrl   String?
  location      String?

  email  String?
  status LeadStatus @default(NEW)

  raw Json?

  @@unique([searchTaskId, email])
  @@unique([searchTaskId, linkedinUrl])
  @@unique([searchTaskId, source, externalId])

  @@index([searchTaskId])
  @@index([email])
  @@index([status])
}

model Campaign {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name        String
  description String?

  provider    String?
  externalId  String?
  externalUrl String?

  searchTasks SearchTask[]

  @@index([provider, externalId])
}
